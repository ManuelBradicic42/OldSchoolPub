<body class="background">
  <div class="structure">
    <h1><%= t('order.show.title') %></h1>
    <p><%= t('order.show.text') %></p>
    <br>
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Customername:</strong>
    <%= @order.customerName %>
  </p>

  <p>
    <strong>Customernumber:</strong>
    <%= @order.customerNumber %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @order.address %>
  </p>

  <p>
    <strong>Totalprice:</strong>
    <%= @order.totalPrice %>
  </p>
  <% if not @order.line_items.empty? %>
    <p><%= "You have ordered" %></p>
  <% end %>

  <p>
    <ul>
      <% @order.line_items.each do |item| %>
        <li><%= item.menu.name %></li>
      <% end %>
    </ul>
  </p>

    <% if @order.line_items.empty? %>
      <%= button_to 'Confirm', line_items_path(menu_id: session), id: 'confirmId'%>
    <% end %>

  <%= link_to 'Edit', edit_order_path(@order) %>
  <%= link_to 'Back', '/menu' %>
  </div>
</body>
