
<%= debug session[:cart] %>

<table>
  <tr>
    <% @cart.each do |product| %>
    <th> <%=product.name %></th>
    <th><%= product.price %></th>
    <th> <%#= quantity%></th>
    <% end %>
  </tr>
</table>

<div class="backgroundMenu">
  <div class="structureMenu">
<% if @cart.empty? %>
  <p>Your cart is empty! Please go to Menu and order something</p>
<% else %>

      <h1><%= t('menus.title') %></h1>
      <p><%= t('menus.text_head') %></p>

      <table class="Menu">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Number of units</th>
            <th>Price per unit</th>
            <th>Total price</th>
            <th>b</th>
            <th>a</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cart.each_with_index do |menu, i| %>
            <% row_class = "" %>
            <% if i % 2 == 0 %>
              <% row_class = "even" %>
            <% else %>
              <% row_class = "odd" %>
            <% end %>

            <tr class="<%= row_class %>">
              <% if menu.availability == true %>
                <td class="picture"><%= image_tag(menu.name, :class => "imgMenu", :alt => "Image") rescue image_tag('Pizza.jpg', :class => "imgMenu")%></td>
                <td class="name"><%= menu.name %></td>
                <td>2</td>
                <td><%= menu.price %></td>
                <td>21ra</td>
                <td><%= link_to 'Add', add_to_cart_path(menu.id), method: :post %></td>
                <td><%= link_to 'Remove', remove_from_cart_path(menu.id), method: :delete %></td>


              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
  <% end %>
</div>
</div>
