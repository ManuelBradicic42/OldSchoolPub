<%= debug session[:cart] %>
<%= javascript_tag "session = #{session[:cart].to_json.html_safe};"%>

<div class="backgroundMenu" onload="load()">
  <div class="structureMenu">
    <% if @cart.empty? %>
      <p >Your cart is empty! Please go to Menu and order something</p>
    <% else %>

      <h1><%= t('menus.title') %></h1>
      <p id="test1"><%= t('menus.text_head') %></p>

      <table class="Menu">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Number of units</th>
            <th>Price per unit</th>
            <th>Total price</th>
            <th>b</th>
            <th>a</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cart.each_with_index do |menu, i| %>
            <% row_class = "" %>
            <% row_id = menu.id.to_s %>
            <% if i % 2 == 0 %>
              <% row_class = "even" %>
            <% else %>
              <% row_class = "odd" %>
            <% end %>

            <tr class="<%= row_class %>">
              <% if menu.availability == true %>
                <td class="picture"><%= image_tag(menu.name, :class => "imgMenu", :alt => "Image") rescue image_tag('Pizza.jpg', :class => "imgMenu")%></td>
                <td class="name"><%= menu.name %></td>
                <td id="nrUnits<%= row_id %>"></td>
                <td id="ppu<%= row_id %>"><%= menu.price %></td>
                <td id="totalPrice<%= row_id %>"></td>
                <td><%= link_to 'Add', add_to_cart_path(menu.id), method: :post %></td>
                <td><%= link_to 'Remove', remove_from_cart_path(menu.id), method: :delete %></td>


              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- To change the content of the output, check application.js, load function -->
      <p id="finalPrice"></p>
      <button onclick="my"
      <br>
  <% end %>
</div>
</div>
