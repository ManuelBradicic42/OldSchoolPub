
<p id="notice"><%= notice %></p>


<div class="backgroundMenu">
  <div class="structureMenu">
    <h1><%= t('menus.title') %></h1>
    <p><%= t('menus.text_head') %></p>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Description</th>
          <th style="text-align:center">Price</th>
          <th>Order</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menus.each_with_index do |menu, i| %>
          <% row_class = "" %>
          <% if i % 2 == 0 %>
            <% row_class = "even" %>
          <% else %>
            <% row_class = "odd" %>
          <% end %>

          <tr class="<%= row_class %>">
            <% if menu.availability == true %>

              <td class = "picture"><%= image_tag(menu.name, :class => "imgMenu", :alt => "Image") rescue image_tag('Pizza.jpg', :class => "imgMenu")%></td>
              <td class = "name"><%= menu.name %></td>
              <td><%= menu.description %></td>
              <td style="text-align:center"><%= menu.price %></td>
              <td><%= link_to 'Add to cart', add_to_cart_path(menu.id), method: :post %></td>

            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
